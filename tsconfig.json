{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "ES2021","DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@Assets/*": ["src/assets/*"],
      "@Components/*": ["src/Components/*"],
      "@Container/*": ["src/Container/*"],
      "@Navigator/*": ["src/Navigator/*"],
      "@Context/*": ["src/Context/*"],
      // "@Config/*": ["src/Config/*"],
      "@Hooks/*": ["src/Hooks/*"],
      "@Utils/*": ["src/Utils/*"],
      "@Const/*": ["src/Const/*"],
      "@Type/*": ["src/Type/*"],
      // "@Store/*": ["src/Store/*"],
      "@Repo/*": ["src/Repo/*"],
      // "@PublicLayout/*": ["src/PublicLayout/*"],
      // "@PrivateLayout/*": ["src/PrivateLayout/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
